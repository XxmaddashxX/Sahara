package net.thesahara.game.logic;

/**
 *The Sahara - TimeHandler.java
 *@author Greg
 *
 */

public class TimeHandler {
	public static int time;
	public static String timecode;
	public static void increaseTime(int amt){
		time = time + amt;
		if(time > 1440){
			timecode = "AM";
			time = time - 1440;
			return;
		}
		if(time >= 720){
			timecode = "PM";
			return;
		}
	}
	public static void setTime(int amt){
		time = time + amt;
		if(time > 1440){
			timecode = "AM";
			time = time - 1440;
			return;
		}
		if(time >= 720){
			timecode = "PM";
			return;
		}
		else{
			timecode = "AM";
		}
	}
	public static String getTimeCode(){
		return TimeHandler.timecode;
	}
	
	
	
}

package net.thesahara.game.logic;

/**
 *The Sahara - Time.java
 *@author Greg
 *
 */
public class Time extends Thread{

	@Override
	public void run() {
		for(int i = 0; i < 0; i++){
			TimeHandler.increaseTime(1);
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				
				e.printStackTrace();
			}
		}
	
	}
	


	

}

package net.thesahara.engine;

import org.newdawn.slick.openal.Audio;
import org.newdawn.slick.openal.AudioLoader;

/**
 *The Sahara - SoundHandler.java
 *@author Greg
 *
 */
public class SoundHandler {
	
	
	public static Audio loadAudio(String name, String format){
		return AudioLoader.getAudio(format.toUpperCase(), "src/main/resources/assets/sahara/textures/" + name + format.toLowerCase());
		
		
		return null;
	}
	

}

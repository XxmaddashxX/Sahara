 * 
 */
package net.thesahara.game.player;

/**
 *The Sahara - Player.java
 *@author Greg
 *
 */
public abstract class PlayerBase {
	
	public static int playerX;
	public static int playerY;
	public static int playerHealth;
	public static int playerSpeed;
	public static boolean canMove;
	public static boolean isHurt;
	public static boolean isGodMode;
	public static String race;
	public static String playerName;
	
	public PlayerBase(){
		
	}

	public static int getPlayerX() {
		return playerX;
	}

	public static void setPlayerX(int playerX) {
		PlayerBase.playerX = playerX;
	}

	public static int getPlayerY() {
		return playerY;
	}

	public static void setPlayerY(int playerY) {
		PlayerBase.playerY = playerY;
	}

	public static int getPlayerHealth() {
		return playerHealth;
	}

	public static void setPlayerHealth(int playerHealth) {
		PlayerBase.playerHealth = playerHealth;
	}

	public static int getPlayerSpeed() {
		return playerSpeed;
	}

	public static void setPlayerSpeed(int playerSpeed) {
		PlayerBase.playerSpeed = playerSpeed;
	}

	public static boolean isCanMove() {
		return canMove;
	}

	public static void setCanMove(boolean canMove) {
		PlayerBase.canMove = canMove;
	}

	public static boolean isHurt() {
		return isHurt;
	}

	public static void setHurt(boolean isHurt) {
		PlayerBase.isHurt = isHurt;
	}

	public static boolean isGodMode() {
		return isGodMode;
	}

	public static void setGodMode(boolean isGodMode) {
		PlayerBase.isGodMode = isGodMode;
	}

	public static String getRace() {
		return race;
	}

	public static void setRace(String race) {
		PlayerBase.race = race;
	}

	public static String getPlayerName() {
		return playerName;
	}

	public static void setPlayerName(String playerName) {
		PlayerBase.playerName = playerName;
	}
	public abstract void moveUp();
	public abstract void moveDown();
	public abstract void moveLeft();
	public abstract void moveRight();
	

}

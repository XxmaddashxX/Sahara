package net.thesahara.engine.logic;

import java.text.DateFormat;
import java.text.SimpleDateFormat;
import java.util.Date;

/**
 *The Sahara - ILog.java
 *@author Greg
 *
 */
public class ILog {
	
	public static final String modload = "LOAD";
	public static final String modconfig = "CONFIG"; 
	public static final String modtexture = "TEXTURE";
	public static final String moderror = "ERROR";
	public static final String modunknown = "UNKNOWN";
	public static final String moddebug = "DEBUG";
	public static final String modplayer = "PLAYER";
	public static final String modevent = "EVENT";
	public static final String modgui = "GUI";
	public static final String modexception = "EXECPTION";
	public static final String modmissing = "MISSING";
	public static final String modend = "END";
	public static final String modpause = "PAUSE";
	public static final String modskip = "SKIP";
	public static final String modupdate = "UPDATE";
	public static final String modinfo = "INFO";
	public static final String modmodel = "MODEL";
	public static final String modicon = "ICON";
	public static final String modclient = "CLIENT";
	public static final String modserver = "SERVER";
	public static final String modaddon = "ADDON";
	public static final String modelement = "ELEMENT";
	public static final String modwarning = "WARNING";
	public static final String modregister = "REGISTERATION";
	
		
	public static void print(String title, String text){
		DateFormat dateformat = new SimpleDateFormat("HH:mm:ss");
		Date date = new Date();
		System.out.println("[" + dateformat.format(date) + "] [" + title.toUpperCase() + "] " + text);
	
	}

}
